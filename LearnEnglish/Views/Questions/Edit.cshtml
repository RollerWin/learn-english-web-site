@model LearnEnglish.Models.Question

@{
    ViewData["Title"] = "Edit";
}

<section class="edit-element">
    <div class="container">
        <h2>Редактирование теста</h2>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="QuizId" class="control-label"></label>
                        <select asp-for="QuizId" class="form-control" asp-items="ViewBag.QuizId"></select>
                        <span asp-validation-for="QuizId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Text" class="control-label"></label>
                        <input asp-for="Text" class="form-control" />
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Type" class="control-label"></label>
                        <select asp-for="Type" class="form-control"></select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Order" class="control-label"></label>
                        <input asp-for="Order" class="form-control" />
                        <span asp-validation-for="Order" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a class="back-to-list" asp-controller="Quizs" asp-action="EditQuiz" asp-route-id="@ViewBag.QuizId">Вернуться к списку</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
