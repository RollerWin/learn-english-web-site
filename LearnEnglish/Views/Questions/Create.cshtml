@model LearnEnglish.Models.Question

@{
    ViewData["Title"] = "Create";
    int quizId = (int)ViewData["QuizId"];
}


<section class="create-element">
    <div class="container">
        <h2>Добавить вопрос</h2>
    
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="QuizId" value="@quizId" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Text" class="control-label"></label>
                        <input asp-for="Text" class="form-control" />
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Type" class="control-label"></label>
                        <select asp-for="Type" id="Type" class="form-control">
                            @foreach (var type in Enum.GetValues(typeof(QuestionType)))
                            {
                                <option value="@type">@type</option>
                            }
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="Order" value="@ViewData["CurrentOrder"]" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
                <a asp-action="Index" class="back-to-list">Вернуться к списку</a>
            </div>
        </div>
    </div>
</section>

