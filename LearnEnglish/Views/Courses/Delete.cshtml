@model LearnEnglish.Models.Course

@{
    ViewData["Title"] = "Удаление курса";
}

<section class="edit-element">
    <div class="container">
        <h2>Вы уверены, чтобы хотите удалить элемент?</h2>
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.UserName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ImgPath)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ImgPath)
                </dd>
            
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Удалить" class="btn-danger" /> |
                    <a class="back-to-list" asp-action="Index">Вернуться к списку</a>
                </form>
            </dl>
        </div>
    </div>
</section>



